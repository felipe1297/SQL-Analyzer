{
  "name": "sql-analyzer-plugin",
  "displayName": "SQL Analyzer Plugin",
  "description": "Analyze SQL code and provide recommendations, diagrams and analysis.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.analyzeSQL",
    "onCommand:extension.updateDBCredentials",
    "onCommand:extension.showDBCredentials"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.analyzeSQL",
        "title": "Analyze SQL"
      },
      {
        "command": "extension.updateDBCredentials",
        "title": "Update Database Credentials"
      },
      {
        "command": "extension.showDBCredentials",
        "title": "Show Database Credentials"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SQL Analyzer Configuration",
      "properties": {
        "sqlAnalyzer.dbHost": {
          "type": "string",
          "default": "",
          "description": "Database host for SQL Analyzer"
        },
        "sqlAnalyzer.dbPort": {
          "type": "string",
          "default": "5432",
          "description": "Database port for SQL Analyzer"
        },
        "sqlAnalyzer.dbUser": {
          "type": "string",
          "default": "",
          "description": "Database user for SQL Analyzer"
        },
        "sqlAnalyzer.dbPassword": {
          "type": "string",
          "default": "",
          "description": "Database password for SQL Analyzer"
        },
        "sqlAnalyzer.dbDatabase": {
          "type": "string",
          "default": "",
          "description": "Database name for SQL Analyzer"
        },
        "sqlAnalyzer.realTimeAnalysis": {
          "type": "boolean",
          "default": false,
          "description": "Enable real-time analysis of SQL files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5"
  }
}
